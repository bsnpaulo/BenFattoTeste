@model TR.BenFatto.Application.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Detalhamento do produto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Details">
    <div class="form-horizontal">
        <hr />
        <vc:summary />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 custom-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Points" class="col-md-2 custom-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Points" id="Price" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Category.Name" class="col-md-2 custom-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Category.Name" id="Price" class="form-control" readonly="readonly" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-action="Index" class="btn btn-info">Voltar</a>
            </div>
        </div>
    </div>
</form>